{
  "name": "frontend-boilerplate-pug",
  "version": "2.0.0",
  "description": "basic pug template",
  "author": "northshore",
  "license": "ISC",
  "browserslist": [
    "last 2 version",
    "> 1%",
    "IE 11",
    "Firefox ESR",
    "iOS 10"
  ],
  "scripts": {
    "common:sass": "node sass.js",
    "compile:pug": "pug src/pages -o dist --basedir src --pretty --silent",
    "compile:sass": "npm run common:sass",
    "postcompile:sass": "postcss dist/assets/css/**/*.css --env development --no-map --dir dist/assets/css/",
    "compile:js": "webpack --config webpack.dev.js",
    "compile": "npm-run-all -p compile:*",
    "watch:pug": "chokidar \"src/**/*.pug\" -c \"npm run compile:pug\"",
    "watch:sass": "chokidar \"src/**/*.scss\" -c \"npm run compile:sass\"",
    "watch:js": "chokidar  \"src/**/*.js\" -c \"npm run compile:js\"",
    "watch:server": "node server.js",
    "start": "npm-run-all -p watch:*",
    "build:pug": "npm run compile:pug",
    "postbuild:pug": "js-beautify --indent-size 2 --indent-inner-html true --extra_liners '' \"dist/**/*.html\"",
    "build:sass": "npm run common:sass",
    "postbuild:sass": "postcss dist/assets/css/**/*.css --env production --no-map --dir dist/assets/css/",
    "prebuild:js": "rimraf node_modules/.cache/",
    "build:js": "webpack --config webpack.prod.js",
    "build": "npm-run-all -p build:*"
  },
  "dependencies": {
    "bowser": "^2.11.0",
    "core-js": "^3.9.1",
    "picturefill": "^3.0.3",
    "regenerator-runtime": "^0.13.7",
    "swiper": "^6.4.15"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.8",
    "autoprefixer": "^10.2.4",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.14",
    "chokidar-cli": "^2.1.0",
    "cssnano": "^4.1.10",
    "destyle.css": "^2.0.2",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "fibers": "^5.0.0",
    "glob": "^7.1.6",
    "js-beautify": "^1.13.5",
    "make-dir": "^3.1.0",
    "node-css-mqpacker": "^8.0.1",
    "node-sass-glob-importer": "^5.3.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "pug": "^3.0.2",
    "pug-cli": "github:pugjs/pug-cli#master",
    "pug-lint": "^2.6.0",
    "rimraf": "^3.0.2",
    "sass": "^1.32.8",
    "stylelint": "^13.11.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^3.19.0",
    "webpack": "^5.24.2",
    "webpack-cli": "^4.5.0",
    "webpack-merge": "^5.7.3"
  }
}
